
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="2dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#ffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:layout_above="@+id/extra">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#2DDA93"
                    android:clipToPadding="false"
                    android:paddingTop="8dp">

                    <!--clear feeds button -->
                    <EditText
                        android:id="@+id/header"
                        style="@style/txtAndadaProromanbold28"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="-1dp"
                        android:layout_marginLeft="-1dp"
                        android:textColorHint="@color/gray_600_90"
                        android:hint="New Title ..."
                        android:textSize="24sp" />

                    <ImageView
                        android:id="@+id/closeButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="TODO"
                        android:padding="12dp"
                        android:src="@drawable/close"
                        card_view:tint="@color/black" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">
                <FrameLayout android:gravity="start"
                    android:id="@+id/frameStackrectanglesixtytwo"
                    android:layout_height="@dimen/_230pxv" android:layout_width="match_parent">
                    <ImageView android:id="@+id/imagePost"
                        android:layout_gravity="start"
                        android:layout_height="@dimen/_249pxh"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_rectangle_249x375"
                        tools:ignore="ContentDescription"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/post"
                    style="@style/etAndadaProromanmedium17"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top"
                    android:lines="50"
                    android:background="@color/white"
                    android:textColorHint="@color/gray_600_90"
                    android:hint="@string/write_something"
                    android:textSize="16sp"
                    >
                    <requestFocus />
                </EditText>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/extra"
            android:layout_alignParentLeft="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#B6B6B6" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">


                <!-- get camera image Button-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:id="@+id/imageButtonPost"
                    android:src="@drawable/photo"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    card_view:tint="#2DDA93"
                    android:contentDescription="TODO" />

                <ImageView
                    android:id="@+id/cameraButtonPost"
                    android:layout_width="30dp"
                    android:layout_height="48dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="TODO"
                    android:paddingLeft="6dp"
                    android:paddingTop="12dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="12dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/camera"
                    card_view:tint="#2DDA93" />

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_item_pressed"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/attachment">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/attachmentCloseButton"
                        android:src="@drawable/close"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        card_view:tint="#727272"
                        android:contentDescription="TODO" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/posting_as"
                            android:textColor="@color/gray_600_90"
                            android:id="@+id/postingAs" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/namepost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/anonymous"
                                android:textColor="@color/black"
                                android:layout_marginRight="8dp" />


                        </LinearLayout>

                    </LinearLayout>

                    <!-- sending feeds to our database -->
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:id="@+id/sendButton"
                        android:src="@drawable/send"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:padding="4dp"
                        android:layout_alignParentRight="true"
                        card_view:tint="@color/black"
                        android:contentDescription="TODO" />
                    <!-- our progress bar -->
                    <ProgressBar
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:id="@+id/progressBar"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:visibility="gone"
                        android:padding="8dp"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>

