                    android:id="@+id/imageUnion"
                    imageRes="@{@drawable/img_union}"
                    android:layout_width="@dimen/_375pxh"
                    android:layout_height="@dimen/_115pxh"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_union" />

                <LinearLayout
                    android:id="@+id/linearRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linearColumnhomeOne"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_40pxv"
                        android:layout_weight="0.3"
