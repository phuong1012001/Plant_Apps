                                android:layout_height="@dimen/_19pxh"
                                android:layout_marginEnd="@dimen/_10pxh"
                                android:layout_width="@dimen/_11pxh"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_arrowleft"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_arrowleft"/>
                            <TextView android:ellipsize="end"
                                android:id="@+id/txtSpecies"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_10pxh"
                                android:layout_marginTop="@dimen/_23pxv"
                                android:layout_width="match_parent"
                                android:singleLine="true"
                                android:text="@{speciesVM.speciesModel.txtSpecies}"
                                style="@style/txtAndadaProromanbold30" tools:text="@string/lbl_species2"/>
                        </LinearLayout>
                        <ImageView android:id="@+id/imageEllipse"
                            android:layout_height="@dimen/_86pxh"
                            android:layout_marginBottom="@dimen/_63pxv"
                            android:layout_width="@dimen/_168pxh"
                            android:scaleType="fitXY"
                            imageRes="@{@drawable/img_ellipse_2}"
                            tools:ignore="ContentDescription" tools:src="@drawable/img_ellipse_2"/>
                    </LinearLayout>
                    <ImageView android:id="@+id/imageEllipseOne"
                        android:layout_gravity="bottom|end"
                        android:layout_height="@dimen/_124pxh"
