<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="articlesRowModel" type="com.phngsapplication.app.model.Article"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/oneArticle"
        android:layout_width="@dimen/_331pxh"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/groupStylewhite_A702cornerRadius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imageArticle"
                cornerRadius="@{@dimen/_13pxh}"
                android:layout_width="@dimen/_331pxh"
                android:layout_height="@dimen/_145pxv"
                android:layout_gravity="top|start"
                android:layout_marginBottom="@dimen/_10pxv"
                android:scaleType="fitXY"
                android:src="@drawable/img_rectangle22" />

            <TextView
                android:id="@+id/titleArticle"
                style="@style/txtAndadaProromanbold15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15pxh"
                android:layout_marginTop="@dimen/_5pxv"
                android:layout_marginEnd="@dimen/_15pxh"
                android:text="@string/msg_david_austin_w"
                tools:ignore="TextSizeCheck"
                />
<!--            tools:text="@string/msg_david_austin_w"-->
            <LinearLayout
                android:id="@+id/linearRowellipsethirtyone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15pxh"
                android:layout_marginTop="@dimen/_13pxv"
                android:layout_marginEnd="@dimen/_15pxh"
                android:layout_marginBottom="@dimen/_17pxv"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageAuthor"
                    circular="@{true}"
                    imageRes="@{@drawable/img_ellipse31}"
                    android:layout_width="@dimen/_28pxh"
                    android:layout_height="@dimen/_28pxh"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_ellipse31" />

                <LinearLayout
                    android:id="@+id/linearColumnshivanivora"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_9pxh"
                    android:layout_weight="0.7"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtAuthor"
                        style="@style/txtAndadaProromanmedium11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_shivani_vora"
                        tools:ignore="TextSizeCheck"
                        tools:text="@string/lbl_shivani_vora" />

                    <TextView
                        android:id="@+id/txtDate"
                        style="@style/txtAndadaProromanmedium9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5pxv"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_2019_01_01"
                        tools:ignore="TextSizeCheck"
                        tools:text="@string/lbl_2019_01_01" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageUser"
                    android:layout_width="@dimen/_56pxh"
                    android:layout_height="@dimen/_16pxh"
                    android:layout_marginStart="@dimen/_9pxh"
                    android:layout_marginTop="@dimen/_9pxv"
                    android:layout_marginBottom="@dimen/_2pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_user"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_user" />
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
