<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="listPlantRowModel" type="com.phngsapplication.app.modules.listplant.data.model.ListPlantRowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearRowrectangleOne"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="horizontal">
        <FrameLayout android:id="@+id/frameStackrectangleOne"
            android:layout_height="@dimen/_139pxv"
            android:layout_width="@dimen/_139pxh" style="@style/groupStylewhite_3">
            <ImageView android:id="@+id/imageRectangleOne"
                android:layout_gravity="center"
                android:layout_height="@dimen/_125pxh"
                android:layout_marginHorizontal="@dimen/_7pxh"
                android:layout_marginVertical="@dimen/_7pxv"
                android:layout_width="@dimen/_125pxh"
                android:scaleType="fitXY" cornerRadius="@{@dimen/_3pxh}"
                imageRes="@{@drawable/img_rectangle_125x125}"
                tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle_125x125"/>
        </FrameLayout>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearColumnredcactus"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_2pxv"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_6pxv"
            android:layout_weight="0.54" android:layout_width="0dp" android:orientation="vertical">
            <TextView android:ellipsize="end"
                android:id="@+id/txtRedCactus"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{listPlantRowModel.txtRedCactus}"
                style="@style/txtAndadaProromanbold17" tools:text="@string/lbl_red_cactus"/>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearRowkingdom"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtKINGDOM"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{listPlantRowModel.txtKINGDOM}"
                    style="@style/txtAndadaProromanbold12" tools:text="@string/lbl_kingdom"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtFAMILY"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{listPlantRowModel.txtFAMILY}"
                    style="@style/txtAndadaProromanbold12" tools:text="@string/lbl_family"/>
            </LinearLayout>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearRowplantae"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_4pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtPlantae"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_weight="0.43"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{listPlantRowModel.txtPlantae}"
                    style="@style/txtAndadaProromanmedium12_2" tools:text="@string/lbl_plantae"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtCactaceae"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_37pxh"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_weight="0.57"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{listPlantRowModel.txtCactaceae}"
                    style="@style/txtAndadaProromanmedium12_2" tools:text="@string/lbl_cactaceae"/>
            </LinearLayout>
            <TextView android:ellipsize="end" android:id="@+id/txtPrice"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{listPlantRowModel.txtPrice}"
                style="@style/txtAndadaProromanbold12" tools:text="@string/lbl_description"/>
            <TextView android:id="@+id/txtDescription"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4pxv"
                android:layout_width="match_parent"
                android:text="@{listPlantRowModel.txtDescription}"
                style="@style/txtAndadaProromanregular12" tools:text="@string/msg_cactus_spines_a"/>
        </LinearLayout>
    </LinearLayout>
</layout>
