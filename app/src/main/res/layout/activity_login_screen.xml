<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="loginScreenVM" type="com.phngsapplication.app.modules.loginscreen.data.viewmodel.LoginScreenVM"/>
    </data>
    <LinearLayout android:gravity="start"
        android:id="@+id/linearLoginScreen"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <TextView android:ellipsize="end" android:id="@+id/txtHello"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_23pxh"
            android:layout_marginStart="@dimen/_23pxh"
            android:layout_marginTop="@dimen/_76pxv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@{loginScreenVM.loginScreenModel.txtHello}"
            style="@style/txtAndadaProromanbold30_1" tools:text="@string/lbl_hello"/>
        <TextView android:ellipsize="end"
            android:id="@+id/txtLetsLearnMor"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_23pxh"
            android:layout_marginStart="@dimen/_23pxh"
            android:layout_marginTop="@dimen/_10pxv"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:text="@{loginScreenVM.loginScreenModel.txtLetsLearnMor}"
            style="@style/txtAndadaProromanmedium16" tools:text="@string/msg_let_s_learn_mor2"/>

        <TextView
            android:id="@+id/txtEmail"
            style="@style/txtAndadaProromanbold14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_23pxh"
            android:layout_marginTop="@dimen/_25pxv"
            android:layout_marginEnd="@dimen/_23pxh"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@{loginScreenVM.loginScreenModel.txtEmail}"
            tools:ignore="TextSizeCheck"
            tools:text="@string/lbl_email" />

        <EditText
            android:id="@+id/etEmailOne"
            style="@style/etAndadaProromanmedium17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_23pxh"
            android:layout_marginTop="@dimen/_13pxv"
            android:layout_marginEnd="@dimen/_23pxh"
            android:ellipsize="end"
            android:hint="@string/msg_taylorswift_gma"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_10pxv"
            android:singleLine="true"
            android:text="@={loginScreenVM.loginScreenModel.etEmailOneValue}"
            android:textColorHint="@color/bluegray_800"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/etGroupEightyFive"
            style="@style/etAndadaProromanmedium15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_23pxh"
            android:layout_marginTop="@dimen/_38pxv"
            android:layout_marginEnd="@dimen/_23pxh"
            android:ellipsize="end"
            android:hint="@string/lbl_password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_9pxv"
            android:singleLine="true"
            android:text="@={loginScreenVM.loginScreenModel.etGroupEightyFiveValue}"
            android:textColorHint="@color/gray_600_90"
            tools:ignore="Autofill,TextSizeCheck" />
        <LinearLayout android:id="@+id/linearRowrememberme"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_23pxh"
            android:layout_marginStart="@dimen/_23pxh"
            android:layout_marginTop="@dimen/_27pxv"
            android:layout_width="match_parent" android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkBoxRememberme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1pxv"
                android:buttonTint="@color/gray_600"
                android:ellipsize="end"
                android:fontFamily="@font/andada_pro"
                android:letterSpacing="0.01"
                android:paddingStart="@dimen/_7pxh"
                android:singleLine="true"
                android:text="@string/lbl_remember_me"
                android:textColor="@color/gray_600"
                android:textFontWeight="500"
                android:textSize="@dimen/_13pxh"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck"
                tools:text="@string/lbl_remember_me" />

            <TextView
                android:id="@+id/txtForgotPassword"
                style="@style/txtAndadaProromanmedium13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_90pxh"
                android:layout_marginTop="@dimen/_1pxv"
                android:ellipsize="end"
                android:letterSpacing="0.01"
                android:singleLine="true"
                android:text="@{loginScreenVM.loginScreenModel.txtForgotPassword}"
                tools:ignore="TextSizeCheck"
                tools:text="@string/msg_forgot_password" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            style="@style/btnSolidRounded_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_23pxh"
            android:layout_marginTop="@dimen/_36pxv"
            android:layout_marginEnd="@dimen/_23pxh"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_16pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_16pxv"
            android:singleLine="true"
            android:text="@string/lbl_login"
            android:textAllCaps="false"
            tools:ignore="TextSizeCheck"
            tools:text="@string/lbl_login" />

        <LinearLayout
            android:id="@+id/linearRowdonthaveacco"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_23pxh"
            android:layout_marginTop="@dimen/_19pxv"
            android:layout_marginEnd="@dimen/_23pxh"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDontHaveAcco"
                style="@style/txtAndadaProromanmedium13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_weight="0.65"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{loginScreenVM.loginScreenModel.txtDontHaveAcco}"
                tools:ignore="TextSizeCheck"
                tools:text="@string/msg_don_t_have_acco" />

            <TextView
                android:id="@+id/txtSignUp"
                style="@style/txtAndadaProromanbold13_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_1pxh"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_weight="0.28"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{loginScreenVM.loginScreenModel.txtSignUp}"
                tools:ignore="TextSizeCheck"
                tools:text="@string/lbl_sign_up" />
        </LinearLayout>
    </LinearLayout>
</layout>
